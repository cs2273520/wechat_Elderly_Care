.top {
  background-color: #f4f4f4;
  height: 40px;
  display: flex;
  align-items: center;
  margin: 0 10px;
  border-radius: 5px;
  padding: 0 10px;
}

.content {
  display: flex;
  flex-direction: column;
  padding: 10px 10px;
}

.content .map {
  height: 300px;
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
}

.content .map image {
  width: 100%;
  height: 100%;
  border-radius: 10px;
}

.content .map .location {
  width: 30px;
  height: 30px;
  background-color: whitesmoke;
  border-radius: 5px;
  position: absolute;
  display: flex;
  align-items: center;
  justify-content: center;
  right: 5px;
  bottom: 5px;
}

.content .cont1 {
  margin: 15px 0;
  border-radius: 10px;
  background-color: #f4f4f4;
  padding: 10px 15px;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  height: 100px;
}

.content .cont1 .round {
  display: flex;
  align-items: center;
  height: 40px;
  line-height: 40px;
  background-color: white;
  border-radius: 5px;
}

.content .cont1 .round .point {
  width: 8px;
  height: 8px;
  background-color: #fc7c4c;
  border-radius: 50%;
  margin: 0px 10px;
}

.footer {
  width: 100%;
  position: fixed;
  left: 0;
  bottom: 0;
}
