.top {
  display: flex;
  justify-content: space-between;
  height: 40px;
  align-items: center;
}

.top .top-1 {
  display: flex;
  justify-content: flex-start;
  height: 30px;
  align-items: center;
}

.content {
  display: flex;
  flex-direction: column;
  padding: 10px 15px;
  background-color: #f5f6f8;
  height: 650px;
}

.content .cont1 {
  background-color: white;
  border-radius: 10px;
  padding: 10px;
}

.content .cont1 .cont1-top {
  display: flex;
  justify-content: space-between;
  border-bottom: 2px solid #f1f1f1;
}

.content .cont1 .cont1-top .left {
  display: flex;
  flex-wrap: wrap;
}

.content .cont1 .cont1-top .left text {
  margin-left: 15px;
}

.content .cont1 .cont1-top .right image {
  width: 50px;
  height: 70px;
  border-radius: 5px;
}

.content .cont1 .cont1-bottom {
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.content .cont1 .cont1-bottom .t-button {
  border: none;
  color: black;
  font-weight: normal;
  padding-bottom: 8px;
}

.content .cont1 .cont1-bottom view {
  height: 30px;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  margin-top: 10px;
}

.content .cont1 .content-sale {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.content .cont1 .content-sale .content-sale1 {
  display: flex;
  width: 300px;
  height: 80px;
  justify-content: space-around;
  align-items: center;
}

.content .cont1 .content-sale .content-sale1 view {
  background-color: blanchedalmond;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 20px;
  border-radius: 5px;
  border: 1px solid #ccc;
  padding: 5px;
}

.content .cont1 .content-sale .content-sale2 {
  width: 100%;
  height: 40px;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 1px solid #f1f0f0;
}

.content .cont2 {
  background-color: white;
  border-radius: 10px;
  padding: 10px;
  display: flex;
  flex-direction: column;
  margin-top: 15px;
}

.content .cont2 view {
  margin-top: 10px;
}

.content .cont2 .price {
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 32px;
  margin-bottom: 20px;
}

.content .block {
  width: 100vw;
  height: 240px;
  background: #fff;
  border-top-left-radius: 16rpx;
  border-top-right-radius: 16rpx;
}

.content .wrapper {
  margin: 32rpx;
  display: block;
}

.content .header {
  display: flex;
  align-items: center;
  height: 116rpx;
}

.content .title {
  flex: 1;
  text-align: center;
  font-weight: 600;
  font-size: 36rpx;
}

.content .btn {
  font-size: 32rpx;
  padding: 32rpx;
}

.content .btn--cancel {
  color: rgba(0, 0, 0, 0.6);
}

.content .btn--confirm {
  color: #0052d9;
}
